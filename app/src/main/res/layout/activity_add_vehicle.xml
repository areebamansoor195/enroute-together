<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddVehicleActivity">

        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/layout_toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?android:attr/actionBarSize"
            android:padding="10dp">

            <EditText
                android:id="@+id/et_makers_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:hint="Maker's Name"
                android:inputType="text"
                android:textColor="@color/colorGray"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_makers_name"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:hint="Model No."
                android:inputType="number"
                android:textColor="@color/colorGray"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_model"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:hint="Colour"
                android:inputType="text"
                android:textColor="@color/colorGray"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/et_capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_color"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:ems="10"
                android:hint="Capacity"
                android:inputType="number"
                android:textColor="@color/colorGray"
                android:textSize="17sp" />

            <Button
                android:id="@+id/add_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_capacity"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorGray"
                android:padding="10dp"
                android:text="Add"
                android:textColor="@color/colorWhite"
                android:textSize="17sp" />

        </RelativeLayout>
    </RelativeLayout>
</layout>