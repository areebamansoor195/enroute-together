<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".OfferRideActivity">


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:titleTextColor="@color/colorWhite">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Offer Ride"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                        android:textColor="@color/colorWhite" />

                    <Button
                        android:id="@+id/active_busy_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="right"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@color/colorWhite"
                        android:text="GO ONLINE"
                        android:textColor="@color/colorPrimaryDark"
                        android:visibility="gone" />
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginTop="?android:attr/actionBarSize">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".OfferRideActivity" />

            <RelativeLayout
                android:id="@+id/setup_ride_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorGrayTransparent">

                <android.support.v7.widget.CardView
                    android:id="@+id/source_destination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp">

                        <com.seatgeek.placesautocomplete.PlacesAutocompleteTextView
                            android:id="@+id/et_source"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:backgroundTint="@color/colorGray"
                            android:drawableStart="@drawable/ic_locationstart_24dp"
                            android:ems="10"
                            android:hint="Pick up"
                            android:inputType="text"
                            android:singleLine="true"
                            android:textColor="@color/colorGray"
                            android:textColorHint="@color/colorGray"
                            android:textSize="17sp"
                            app:pacv_googleMapsApiKey="AIzaSyA_jKH6Gch6F27l2kCTwflCJUZ9nXObWGQ"
                            app:pacv_resultType="address" />

                        <com.seatgeek.placesautocomplete.PlacesAutocompleteTextView
                            android:id="@+id/et_dropoff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/et_source"
                            android:layout_marginTop="3dp"
                            android:backgroundTint="@color/colorGray"
                            android:drawableStart="@drawable/ic_locationstop_24dp"
                            android:hint="Drop off"
                            android:singleLine="true"
                            android:textColor="@color/colorGray"
                            android:textColorHint="@color/colorGray"
                            android:textSize="17sp"
                            app:pacv_googleMapsApiKey="AIzaSyA_jKH6Gch6F27l2kCTwflCJUZ9nXObWGQ"
                            app:pacv_resultType="address" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/source_destination"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/car_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorGray"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:text="Car Details"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhite"
                                android:textSize="17dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/edit_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:text="@string/edit"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhite"
                                android:textSize="17dp" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/car_make"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/car_title"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Make: Suzuki Cultus"
                            android:textAlignment="center"
                            android:textColor="@color/colorGray" />

                        <TextView
                            android:id="@+id/car_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/car_make"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Model : 2016"
                            android:textAlignment="center"
                            android:textColor="@color/colorGray" />

                        <TextView
                            android:id="@+id/car_plate_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/car_model"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Plate Number : KMX 123"
                            android:textAlignment="center"
                            android:textColor="@color/colorGray" />

                        <TextView
                            android:id="@+id/car_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/car_plate_number"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="Color : White"
                            android:textAlignment="center"
                            android:textColor="@color/colorGray" />

                        <TextView
                            android:id="@+id/car_capacity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/car_color"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Capacity : 4"
                            android:textAlignment="center"
                            android:textColor="@color/colorGray" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/lets_start_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorGray"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lets Start"
                            android:textAlignment="center"
                            android:textColor="@color/colorWhite"
                            android:textSize="17sp" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>


            </RelativeLayout>


        </FrameLayout>


    </RelativeLayout>
</layout>